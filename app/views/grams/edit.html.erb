<div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 card form">
	<h1>Edit Share</h1>
	<%= simple_form_for @gram do | f | %>
		<br />
		<%= f.input :breed, as: :select, collection: @gram.breeds, :include_blank => false %>
		<%= f.input :message %>
		<%= f.input :picture %>
		<%= f.submit "Update", class: "my-btn" %>
	<% end %>
</div>